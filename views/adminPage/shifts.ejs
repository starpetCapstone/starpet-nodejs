<%- include('partials/header.ejs') %> <%- include('partials/nav.ejs') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
  >
    <h1 class="h2"><%= pagename %></h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">
          Export
        </button>
      </div>
      <button
        type="button"
        class="btn btn-sm btn-outline-secondary dropdown-toggle"
      >
        <span data-feather="calendar"></span>
        This week
      </button>
    </div>
  </div>

  <form action="newshift" method="POST" class="form-inline">
    <p><b>Create New Shift</b></p>
    <div class="input-group">
      <input
        type="text"
        class="form-control rounded"
        id="shift"
        placeholder="Enter shift"
        name="shift"
      />

      <select id="shiftTime" class="form-control rounded" name="shiftTime">
        <option hidden>Select Shift Time</option>
        <option>Day</option>
        <option>Night</option>
      </select>

      <button type="submit" class="btn btn-danger rounded" id="insertButton">Insert</button>
    </div>
  </form>
  <p></p>
  <div class="table-responsive border">
    <table class="table table-hover" style="overflow:auto" height="100px">
      <thead>
        <tr>
          <th scope="col">Shift</th>
          <th scope="col">Shift Time</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<shifts.length; i++) {%>
        <tr>
          <td id="shift" contenteditable="false"> <%= shifts[i].ShiftName %></td>
          <td id ="shiftTime" contenteditable="false"><%= shifts[i].TimeOfDay %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</main>

<style>
   .table-responsive {
    overflow-y:scroll;
    height: 400px;
    border-radius: 5px;

  }
input {
  margin-right: 9px;
  border-radius : 5px;
}
select {
  margin-right: 5px;
  border-radius : 5px;
}

</style>

<%- include('partials/footer.ejs') %>
